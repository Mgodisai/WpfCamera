<UserControl x:Class="WpfCamera.Controls.EdgeDetectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="EdgeDetectionCustomControl">
    <StackPanel>
        <TextBlock Text="Brightness:" Margin="5"/>
        <Slider Name="BrightnessSlider" Minimum="-100" Maximum="100" Value="0" Margin="5" Width="200"/>
        <TextBlock Text="Threshold:" Margin="5"/>
        <Slider Name="ThresholdSlider" Minimum="0" Maximum="255" Value="100" TickFrequency="5" Margin="5" Width="200"/>
        <TextBlock Text="Threshold Linking:" Margin="5"/>
        <Slider Name="ThresholdLinkingSlider" Minimum="0" Maximum="255" Value="200" TickFrequency="5" Margin="5" Width="200"/>
        <CheckBox Name="EdgeDetectionCheckBox" Margin="5" Content="Enable Edge Detection"/>
    </StackPanel>
</UserControl>

